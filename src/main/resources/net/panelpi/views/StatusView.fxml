<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" vgap="10" hgap="10">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <HBox spacing="10" GridPane.hgrow="ALWAYS" GridPane.columnSpan="4">
        <ProgressBar progress="0.0" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Label>0%</Label>
    </HBox>

    <TitledPane text="Print Control" collapsible="false" alignment="BASELINE_CENTER" GridPane.rowIndex="1" maxHeight="Infinity">
        <VBox alignment="CENTER" spacing="10">
            <Button styleClass="warning">
                <graphic>
                    <FontAwesomeIconView glyphName="PAUSE" style="-fx-fill: WHITE"/>
                </graphic>
                Pause Print
            </Button>
            <CheckBox>Enable Auto-Sleep</CheckBox>
        </VBox>
    </TitledPane>
    <TitledPane text="Z Baby Stepping" collapsible="false" alignment="BASELINE_CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="5">
                <Label>Current Offset :</Label>
                <Label fx:id="offsetAmount">0</Label>
                <Label>mm</Label>
            </HBox>
            <HBox alignment="CENTER">
                <Button styleClass="baby-stepping, left">
                    <graphic>
                        <VBox alignment="BASELINE_CENTER">
                            <HBox alignment="CENTER">
                                <FontAwesomeIconView glyphName="HAND_ALT_DOWN"/>
                                <Label>-0.05</Label>
                            </HBox>
                            <Label>mm</Label>
                        </VBox>
                    </graphic>
                </Button>
                <Button styleClass="baby-stepping, right">
                    <graphic>
                        <VBox alignment="BASELINE_CENTER">
                            <HBox alignment="CENTER">
                                <FontAwesomeIconView glyphName="HAND_ALT_UP"/>
                                <Label>+0.05</Label>
                            </HBox>
                            <Label>mm</Label>
                        </VBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </TitledPane>
    <Pane GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>

